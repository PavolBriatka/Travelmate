<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mainListItemStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/place_title"
        style="@style/mainListsTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        tools:text="Castle in Scotland"
        />

    <ImageView
        android:id="@+id/delete_place_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/double_default_margin"
        android:paddingBottom="@dimen/double_default_margin"
        android:contentDescription="@string/place_delete_button_cd"
        android:src="@drawable/outline_cancel_black_24" />


</LinearLayout>