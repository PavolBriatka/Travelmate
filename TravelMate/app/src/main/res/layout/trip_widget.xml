<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/destination_name_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:layout_weight="9"
        android:textColor="@color/colorFont"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:text="Example destination" />

    <ImageView
        android:id="@+id/destination_line_check_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/double_default_margin"
        android:layout_marginRight="@dimen/double_default_margin"
        android:layout_weight="1"
        android:contentDescription="@string/widget_empty_check_box"
        android:src="@drawable/outline_check_box_outline_blank_black_24" />


</LinearLayout>